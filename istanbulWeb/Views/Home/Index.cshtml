@model List<istanbulWeb.Models.ReadMore>
<!-----------------------------home kaydırmalı resimler--------------------------------------------->
<div id="myDIV">
    <div id="demo" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="../iwpProje/istanbul22.jpg" alt="istanbul" width="100%" height="80%">
                <div class="carousel-caption">
                    <h3>Istanbul</h3>
                    <p>We had such a great time in Istanbul!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="../iwpProje/istanbul10.2.jpg" alt="kizkulesi" width="100%" height="80%">
                <div class="carousel-caption">
                    <h3>Kız Kulesi</h3>
                    <p>Thank you, Istanbul!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="../iwpProje/galata-kulesi-gece2.jpg" alt="galatakulesi" width="100%" height="80%">
                <div class="carousel-caption">
                    <h3>Galata Kulesi</h3>
                    <p>We love Istanbul!</p>
                </div>
            </div>
        </div>
        <!--Carousel controls -->
        <a class="carousel-control left"
           href="#demo"
           data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right"
           href="#demo"
           data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>
<!--------------------------------------------------------------------------------------------------------->
<section class="hero is-light london__welcome">
    <div class="hero-body" id="myDIV">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <div class="columns">
                    <div class="column">
                        <h1 class="title is-4">Web İstanbul'a Hoşgeldiniz</h1>
                        <div class="content">
                            <p>
                                İstanbul Datastore, en gözde şehrimizle ilgili verilere herkesin erişebileceği ücretsiz ve açık bir veri paylaşım portalıdır.
                                Vatandaş, işletme sahibi, araştırmacı veya geliştirici olun, site, şehri anlamanıza ve İstanbul'un sorunlarına çözümler
                                geliştirmenize yardımcı olacak veri kümeleri sağlar. Lütfen etrafa bir göz atın.

                            </p>
                            
                        </div>

                    </div>
                </div>
            </div>

        </div>
</section>



<!----------------------------------- Read More Kısmı ----------------------------------------------------------------->
<div class="container-fluid" id="readmore ">
    <div class="row">

        @foreach (var haber in Model)
        {
            <div class="col" id="myDIV">
                <div class="card">
                    <img src="@haber.ResimYolu" class="card-img-top" alt="resim">
                    <div class="card-body" style="font-size:1.5rem;">
                        <div class="card-title">
                            <h2>@haber.Baslik</h2>
                        </div>
                        <div class="card-text">
                            <p>
                                @haber.Paragraf
                            </p>
                        </div>
                        <a href="@haber.Link" class="btn" target="_blank">Tıklayınız</a>
                    </div>
                </div>
            </div>

        }



    </div>
</div>
